<domain type='kvm'>
  <name>{{ .VMName }}</name>
  <memory unit='KiB'>{{ .MemoryKiB }}</memory>
  <vcpu placement='static'>{{ .VCPUs }}</vcpu>
  <os>
    <type arch='x86_64'>hvm</type>
    <boot dev='hd'/>
  </os>
  <features>
    <acpi/>
    <apic/>
  </features>
  <cpu mode='host-passthrough' />
  <clock offset='utc'>
    <timer name='rtc' tickpolicy='catchup'/>
    <timer name='pit' tickpolicy='delay'/>
    <timer name='hpet' present='no'/>
  </clock>
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>destroy</on_crash>
  <pm>
    <suspend-to-mem enabled='no'/>
    <suspend-to-disk enabled='no'/>
  </pm>
  <devices>
    <disk type='volume' device='disk'>
      <driver name='qemu' type='qcow2' discard='unmap'/>
      <source pool='{{ .PoolName }}' volume='{{ .VMName }}'/>
      <target dev='vda' bus='virtio'/>
    </disk>
    <disk type='volume' device='cdrom'>
      <driver name='qemu' type='raw'/>
      <source pool='{{ .PoolName }}' volume='{{ .VMName }}-cidata'/>
      <target dev='hda' bus='ide'/>
    </disk>
    <disk type='volume' device='disk'>
      <driver name='qemu' type='qcow2' discard='unmap'/>
      <source pool='{{ .PoolName }}' volume='{{ .VMName }}-scratch'/>
      <target dev='sda' bus='scsi'/>
    </disk>
    <controller type='scsi' model='virtio-scsi'>
    </controller>
    <interface type='network'>
      <mac address='{{ .MAC }}'/>
      <source network='default' bridge='virbr0'/>
      <model type='virtio'/>
    </interface>
{{ if eq .ConsoleFile "" }}
    <console type='pty'>
      <target port='0'/>
    </console>
{{ else }}
    <console type='file'>
      <source path='{{ .ConsoleFile }}' append='off'>
        <seclabel model='dac' type='static'>
            <label>+{{ .CurrentUser }}:+{{ .CurrentGroup }}</label>
        </seclabel>
      </source>
      <target port='0'/>
    </console>
{{ end }}
    <video>
      <model type='cirrus'/>
    </video>
    <memballoon model='virtio'>
      <alias name='balloon0'/>
    </memballoon>
  </devices>
</domain>
